<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">CÃ³digo</th>
            <th scope="col">Precio</th>
            <th scope="col">Stock</th>
            </tr>
        </thead>
        <tbody>
            {{#if listExists}}
                {{#each listProd}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td><strong>{{this.nombre}}</strong></td>
